#include<iostream>

using namespace std;

class result
{
	string nameSub,grade;
	float number, subGpa;
	int hours;
	
	public:
		
	result(float num, float gpa, string sub, string grad, int h)
	{
		nameSub = sub;
		grade = grad;
		number = num;
		hours = h;
        subGpa = gpa;
		
	}
	
};

float gpa(char grade, int chours)
{
float point;
switch (grade)
{
case 'A':
point = 4.0;
break;
case 'A-':
point = 3.7;
break;
case '+B':
point = 3.3;
break;
case 'B':
point = 3.0;
break;
case 'B-':
point = 2.7;
break;
case 'C':
point = 2.3;
break;
case 'C-':
point = 2.0;
break;
case 'C+':
point = 1.7;
break;
case 'D':
point = 1.0;
break;
case 'F':
point = 0.0;
break;
}
}
int main()
{
	int marks, numSubject, creditHours, semester, tem, totalCH=0;
	float gpa=0.0,cgpa,temp;
	string nameSubject,grade;
	
	cout << "Enter the total number of subjects(th+lab=total)\n";
	cin >> numSubject;
	result subject[numSubject];
    
    for(int i = 1; i <= numSubject; i++)
    {
	cout << "For subject " << i ;
	cout << "\nEnter name: ";
	cin >> nameSubject;
	
	cout << "\nEnter credit hours: ";
	cin >> creditHours;
    
    cout << "\nEnter marks: ";
    cin >> marks;
    
    cout << "\nEnter grade: ";
    cin >> grade;
    temp = gpa( grade, creditHours);
    gpa += temp;
    totalCH += creditHours;
    
	}
    
	return 23440;
}
    
